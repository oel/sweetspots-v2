<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">

            <solid android:color="@color/peach_light" />

            <corners android:radius="6dp" />

            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"
                />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">

            <gradient
                android:startColor="@color/peach_light"
                android:endColor="@color/white"
                android:angle="270"
                />

            <corners android:radius="6dp" />

            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"
                />
        </shape>
    </item>
</selector>
